config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

bind up:alt,ctrl,cmd move screenOriginX;screenOriginY screenSizeX;screenSizeY
bind left:alt,ctrl,cmd move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
bind right:alt,ctrl,cmd move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
bind down:alt,ctrl,cmd throw next
