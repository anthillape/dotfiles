# installs macOS apps using brew

# formulae repositories
tap "homebrew/core"
tap "homebrew/bundle"

# cask, for installing non-cli apps that are not on the app store
brew "cask"

# fuzzy finder, which can later be used in vim to open files in a dir
brew "fzf"

# a url extrator for the tmux plugin https://github.com/tmux-plugins/tmux-urlview
brew "extract_url"

# replace builtin macos sed with gnu-sed
brew "gnu-sed", args: ["with-default-names"]

# replace system git
brew "git"

# replace system grep
brew "grep"

# mas-cli, which installs app store apps 
brew "mas"

# mongodb
brew "mongodb"

# neovim, a refactored, async vim
brew "neovim"

# ruby version manager
brew "rbenv"

# python version manager
brew "pyenv"

# pyenv / virtualenv integration 
brew "pyenv-virtualenv", args: ["--HEAD"]

# readline pyenv requirement
brew "readline"

# wrapper to let tmux use pbcopy and pbpaste
brew "reattach-to-user-namespace"

# find-in-file functionality
brew "the_silver_searcher"

# simplified man page util
brew "tldr"

# terminal multiplexer
brew "tmux"

# app to show n deep directory hierarchies
brew "tree"

# Replace vim
brew "vim", args: ["with-override-system-vi"]

# file watchers 
brew "watch"
brew "watchman"

# file downloader
brew "wget"

# xz pyenv requirement
brew "xz"

# npm replacement yarn
brew "yarn", args: ["without-node"]

# zsh plugin manager
brew "zplug"

# z shell
brew "zsh"
